# Build stage
FROM python:3.10-slim AS builder

# Install build dependencies
RUN apt-get update && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create venv and install dependencies
RUN python -m venv /venv
ENV PATH="/venv/bin:$PATH" \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Copy requirements first for better caching
WORKDIR /app
COPY requirements.txt requirements/requirements.in ./

# Install dependencies with optimizations
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Development stage (used for local development)
FROM builder AS development

# Copy the application code
COPY . /app/
WORKDIR /app

# Command for development with hot reload
CMD ["python", "-m", "uvicorn", "aider.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

# Production stage
FROM python:3.10-slim AS production

# Install runtime dependencies only
RUN apt-get update && \
    apt-get install --no-install-recommends -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN useradd -m -u 1000 -s /bin/bash appuser

# Copy venv from builder
COPY --from=builder /venv /venv
ENV PATH="/venv/bin:$PATH" \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Set up working directory and permissions
WORKDIR /app
COPY . .

# Create necessary directories with proper permissions
RUN mkdir -p /home/appuser/.aider /home/appuser/.cache && \
    chown -R appuser:appuser /home/appuser /app /venv && \
    git config --system --add safe.directory /app

# Switch to appuser
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=5s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose API port
EXPOSE 8000

# Run with proper settings for production
CMD ["python", "-m", "uvicorn", "aider.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "4", "--proxy-headers"]