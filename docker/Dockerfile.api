# Build stage
FROM python:3.10-slim AS builder

# Install build dependencies
RUN apt-get update && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create venv and install dependencies
RUN python -m venv /venv
ENV PATH="/venv/bin:$PATH" \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Copy requirements first for better caching
WORKDIR /app
COPY requirements.txt requirements/requirements.in ./

# Debug: Show what's being installed
RUN echo "Installing dependencies..." && \
    pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir "uvicorn[standard]>=0.24.0" && \
    echo "Installed packages:" && \
    pip list

# Development stage (used for local development)
FROM builder AS development

# Copy the application code
COPY . /app/
WORKDIR /app

# Debug: Verify installation and paths
RUN echo "Python path:" && \
    which python && \
    echo "Uvicorn path:" && \
    which uvicorn || true && \
    echo "Installed packages:" && \
    pip list && \
    echo "Python path:" && \
    python -c "import sys; print(sys.path)"

# Command for development with hot reload
CMD ["uvicorn", "aider.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]