# Build stage
FROM --platform=linux/amd64 python:3.10-slim AS builder

# Install build dependencies
RUN apt-get update && \
    apt-get install --no-install-recommends -y \
    build-essential \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create venv and install dependencies
RUN python -m venv /venv
ENV PATH="/venv/bin:$PATH" \
    PYTHONPATH="/app" \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Install core dependencies first
RUN pip install --no-cache-dir \
    "fastapi>=0.100.0" \
    "uvicorn[standard]>=0.24.0" \
    "pytest>=7.0.0" \
    "pytest-asyncio>=0.21.0" \
    "pytest-cov>=4.1.0" \
    "httpx>=0.24.0"

# Copy requirements first for better caching
WORKDIR /app
COPY requirements.txt requirements/requirements.in ./

# Install dependencies with optimizations
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Production stage
FROM --platform=linux/amd64 python:3.10-slim AS production

# Install runtime dependencies
RUN apt-get update && \
    apt-get install --no-install-recommends -y \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy virtual environment from builder
COPY --from=builder /venv /venv
ENV PATH="/venv/bin:$PATH" \
    PYTHONPATH="/app" \
    PYTHONUNBUFFERED=1

# Copy application code
WORKDIR /app
COPY . .

# Create non-root user
RUN useradd -m -u 1000 appuser && \
    chown -R appuser:appuser /app
USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Production command without reload
CMD ["uvicorn", "aider.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--workers", "2"]

# Development stage
FROM builder AS development

# Copy the application code
COPY . /app/
WORKDIR /app

# Debug: Show what's installed
RUN echo "Installed packages:" && pip list && \
    echo "Python path:" && python -c "import sys; print('\n'.join(sys.path))" && \
    echo "Pytest version:" && pytest --version

# Command for development with hot reload
ENTRYPOINT ["python", "-m"]
CMD ["uvicorn", "aider.api.main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]